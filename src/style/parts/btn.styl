.btn 
  font-size 1rem
  line-height 1.375rem
  color #1C7430 
  font-family open-sans
  font-weight bold
  background-color white
  opacity 0.85
  border-radius 4px
  border 0
  outline none
  padding 0.6rem 0.5rem
  padding 1.7% 1.6%
  cursor pointer
  &__again
    padding 1.7% 2.3%
  &__start-over
    opacity: 0.8
    font-family: open-sans
    font-size: 0.875rem
    font-weight bold
    color: #FFFFFF
    letter-spacing: -0.25px
    background-color transparent
    padding 0
    margin-right auto